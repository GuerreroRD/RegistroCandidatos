@model RegistroCandidatos.Models.Candidato

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-warning alert-dismissible fade show w-100" style="height:4.5rem;" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            @Html.ValidationSummary(false, "Ha ocurrido un error: ")
        </div>
    }
</div>
<div class="row card mt-5">
    <h4 class="text-verdeReservas text-uppercase mt-3 ms-5 ps-5">Registro Candidatos</h4><br />


    <form asp-action="Create" class="container ms-5 ps-5">
        <div asp-validation-summary="None" class="text-danger"></div>
        <div class="row">
            <div class="d-flex col-12 mb-2">
                <div class="col-5 me-3">
                    <div class="form-group">
                        <label asp-for="Nombres" class="control-label text-verdeReservas"></label>
                        <input asp-for="Nombres" class="form-control" placeholder="Ej: Juan Alberto"/>
                        <span asp-validation-for="Nombres" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-5">
                    <div class="form-group">
                        <label asp-for="Apellidos" class="control-label text-verdeReservas"></label>
                        <input asp-for="Apellidos" class="form-control" placeholder="Ej: Perez Garcia"/>
                        <span asp-validation-for="Apellidos" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="d-flex col-lg-12 mb-2">
                <div class="col-5 me-3">
                    <div class="form-group">
                        <label asp-for="Cedula" class="control-label text-verdeReservas"></label>
                        <input asp-for="Cedula" class="form-control" id="nCedula" placeholder="Ej: 001-0022548-2"/>
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-5">
                    <div class="form-group">
                        <label asp-for="FechaDeNacimiento" class="control-label text-verdeReservas"></label>
                        <input asp-for="FechaDeNacimiento" class="form-control" />
                        <span asp-validation-for="FechaDeNacimiento" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="d-flex col-lg-12 mb-2">
                <div class="col-5 me-3">
                    <div class="form-group">
                        <label asp-for="Genero" class="control-label text-verdeReservas"></label>
                        <select asp-for="Genero" class="form-control" asp-items="@Html.GetEnumSelectList<NombreGenero>()">
                            <option selected disabled value="">Seleccione un genero</option>
                        </select>
                        <span asp-validation-for="Genero" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-5">
                    <div class="form-group">
                        <label asp-for="TrabajoActual" class="control-label text-verdeReservas"></label>
                        <input asp-for="TrabajoActual" class="form-control" placeholder="Ej: Desarrollador Web"/>
                        <span asp-validation-for="TrabajoActual" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="d-flex col-lg-12 mb-2">
                <div class="col-5 me-3">
                    <div class="form-group">
                        <label asp-for="ExpectativaSalarial" class="control-label text-verdeReservas"></label>
                        <div class="input-group">
                            <span class="input-group-text">RD$</span>
                            <input asp-for="ExpectativaSalarial" class="form-control" id="ExSalarial"  />
                        </div>
                        <span asp-validation-for="ExpectativaSalarial" class="text-danger"></span>
                    </div>
                </div>

            </div>


        </div>
        <br>
        <div class="form-group col-sm-12 col-md-12 col-lg-12">
            <button type="submit" class="btn btn-verdeReservas col-sm-2 col-md-2 col-lg-2"><i class="fa-regular fa-floppy-disk me-2"></i>Añadir</button>
        </div>

    </form>
    <br />


</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-verdeReservas col-sm col-sm-2 col-md col-md-2 col-lg col-lg-2"><i class="fa-regular fa-circle-left me-2"></i>Volver</a>
</div>



@section Scripts {

    <script type="text/javascript">


        let MontoSolic = SimpleMaskMoney.setMask('#ExSalarial', {
            prefix: '',
            suffix: '',
            fixed: true,
            fractionDigits: 2,
            decimalSeparator: '.',
            thousandsSeparator: ',',
            emptyOrInvalid: () => {
                return this.SimpleMaskMoney.args.fixed
                    ? `0${this.SimpleMaskMoney.args.decimalSeparator}00`
                    : `_${this.SimpleMaskMoney.args.decimalSeparator}__`;
            }
        });

        var cedulaMask = IMask(
            document.getElementById('nCedula'), {
            mask: '000-0000000-0'
        });

        console.log("los scripts sirven");

        function removeMask() {

            var cedulaMask = IMask(
                document.getElementById('nCedula'), {
                mask: '00000000000'
            });

        }

    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
